<Window x:Class="AdminWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdminWPF"
        mc:Ignorable="d"
        Title="Délibáb Étterem - Admin Felület" 
        Height="650" Width="1300"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="GreenButton" TargetType="Button">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="RedButton" TargetType="Button" BasedOn="{StaticResource GreenButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="BlueButton" TargetType="Button" BasedOn="{StaticResource GreenButton}">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0056B3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="GrayButton" TargetType="Button" BasedOn="{StaticResource GreenButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="15,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- GroupBox Style -->
        <Style x:Key="GroupBoxStyle" TargetType="GroupBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <!-- DataGrid Cell Style -->
        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Panel -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Column="0" 
                       Content="🍽️ Délibáb Étterem - Admin" 
                       FontFamily="Segoe UI"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"/>
                
                <Label x:Name="labelStatus"
                       Grid.Column="1"
                       Content="Betöltés..."
                       FontFamily="Segoe UI"
                       FontSize="10"
                       Foreground="#D3D3D3"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       Margin="0,0,20,0"/>
            </Grid>
        </Border>
        
        <!-- Buttons Panel -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                
                <!-- Asztal Kezelés Group -->
                <GroupBox Header="🪑 Asztal kezelés" 
                         Style="{StaticResource GroupBoxStyle}"
                         Width="380" Height="80">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="btnAsztalHozzaad"
                                Grid.Column="0"
                                Content="+ Asztal"
                                Style="{StaticResource GreenButton}"
                                Width="100" Height="35"
                                Click="BtnAsztalHozzaad_Click"/>
                        
                        <ComboBox x:Name="comboBoxAsztalTorlendo"
                                  Grid.Column="1"
                                  Margin="10,0"
                                  FontFamily="Segoe UI"
                                  FontSize="9"
                                  VerticalContentAlignment="Center"
                                  Height="28"/>
                        
                        <Button x:Name="btnAsztalTorol"
                                Grid.Column="2"
                                Content="- Törlés"
                                Style="{StaticResource RedButton}"
                                Width="100" Height="35"
                                Click="BtnAsztalTorol_Click"/>
                    </Grid>
                </GroupBox>
                
                <!-- Időpont Kezelés Group -->
                <GroupBox Header="🕐 Időpont kezelés" 
                         Style="{StaticResource GroupBoxStyle}"
                         Width="400" Height="80">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="btnIdopontHozzaad"
                                Grid.Column="0"
                                Content="+ Időpont"
                                Style="{StaticResource GreenButton}"
                                Width="110" Height="35"
                                Click="BtnIdopontHozzaad_Click"/>
                        
                        <ComboBox x:Name="comboBoxIdopontTorlendo"
                                  Grid.Column="1"
                                  Margin="10,0"
                                  FontFamily="Segoe UI"
                                  FontSize="9"
                                  VerticalContentAlignment="Center"
                                  Height="28"/>
                        
                        <Button x:Name="btnIdopontTorol"
                                Grid.Column="2"
                                Content="- Törlés"
                                Style="{StaticResource RedButton}"
                                Width="100" Height="35"
                                Click="BtnIdopontTorol_Click"/>
                    </Grid>
                </GroupBox>
                
                <!-- Műveletek Group -->
                <GroupBox Header="💾 Műveletek" 
                         Style="{StaticResource GroupBoxStyle}"
                         Width="440" Height="80">
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnMentes"
                                Content="💾 MENTÉS"
                                Style="{StaticResource BlueButton}"
                                Width="200" Height="45"
                                Click="BtnMentes_Click"/>
                        
                        <Button x:Name="btnFrissites"
                                Content="🔄 Frissítés API-ból"
                                Style="{StaticResource GrayButton}"
                                Width="195" Height="45"
                                Margin="15,0,0,0"
                                Click="BtnFrissites_Click"/>
                    </StackPanel>
                </GroupBox>
                
            </StackPanel>
        </Border>
        
        <!-- Data Grid Panel -->
        <Border Grid.Row="2" Background="White" Padding="20">
            <DataGrid x:Name="dataGrid1"
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     HeadersVisibility="All"
                     GridLinesVisibility="All"
                     SelectionMode="Single"
                     SelectionUnit="Cell"
                     Background="White"
                     BorderThickness="0"
                     RowHeaderWidth="120"
                     FontFamily="Segoe UI"
                     FontSize="9"
                     CellStyle="{StaticResource DataGridCellStyle}"
                     LoadingRow="DataGrid1_LoadingRow"
                     MouseLeftButtonUp="DataGrid1_MouseLeftButtonUp">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="10,5"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowHeaderStyle>
                    <Style TargetType="DataGridRowHeader">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.RowHeaderStyle>
            </DataGrid>
        </Border>
    </Grid>
</Window>
