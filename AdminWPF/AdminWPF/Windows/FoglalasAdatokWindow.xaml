<Window x:Class="AdminWPF.Windows.FoglalasAdatokWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Foglalás adatai"
        Height="360" Width="370"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="0,8,0,3"/>
        </Style>
        <Style x:Key="FieldBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="6,5"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style x:Key="ActionBtn" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel Margin="20" LastChildFill="True">

        <!-- Gombok alul rögzítve -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="btnMegse" Content="Mégse"
                    Background="#6C757D" Foreground="White"
                    Style="{StaticResource ActionBtn}"
                    Width="90" Click="BtnMegse_Click"/>
            <Button x:Name="btnFoglal" Content="✔ Foglalás rögzítése"
                    Background="#28A745" Foreground="White"
                    Style="{StaticResource ActionBtn}"
                    Margin="10,0,0,0" Click="BtnFoglal_Click"/>
        </StackPanel>

        <!-- Tartalom -->
        <StackPanel>
            <TextBlock Text="Foglalás adatainak megadása"
                       FontFamily="Segoe UI" FontSize="14" FontWeight="Bold"
                       Foreground="#2D2D30" Margin="0,0,0,4"/>

            <TextBlock Text="Felhasználó ID:" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="txtFelhasznaloId" Style="{StaticResource FieldBox}" Text="1"/>

            <TextBlock Text="Felnőttek száma:" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="txtFelnott" Style="{StaticResource FieldBox}" Text="1"/>

            <TextBlock Text="Gyerekek száma:" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="txtGyerek" Style="{StaticResource FieldBox}" Text="0"/>

            <TextBlock Text="Megjegyzés (opcionális):" Style="{StaticResource FieldLabel}"/>
            <TextBox x:Name="txtMegjegyzes" Style="{StaticResource FieldBox}"
                     Height="65" TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

    </DockPanel>
</Window>
